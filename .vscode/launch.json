{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run main.py", // A descriptive name for your configuration
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py", // Path to your main script
            "console": "integratedTerminal", // Or "internalConsole", "externalTerminal"
            "justMyCode": true, // Set to false to debug into external libraries
            "env": {
                "PYTHONPATH": "${workspaceFolder}", // Usually not needed if running from workspace root
                "PYTHONDONTWRITEBYTECODE": "1" // Prevents Python from writing .pyc files
            },
            "args": [
                // Add any command-line arguments your main.py might need here
                // For example: "--port", "8000"
            ],
            "cwd": "${workspaceFolder}" // Sets the current working directory to your project root
        }
        // You can add more configurations here, e.g., for running specific tests
        // or other scripts within your project.
    ]
}
